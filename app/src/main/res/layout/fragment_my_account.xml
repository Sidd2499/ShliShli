<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MyAccountFragment">


    <RelativeLayout
       android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilePicture"
            android:layout_width="128dp"
            android:src="@drawable/userprofile"
            android:layout_height="116dp"
            app:civ_border_color="@color/black"
            app:civ_border_width="2dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/productFragmentCustomerName"
            android:layout_height="wrap_content"
            android:text="Akshith Varma Chittiveli"
            android:textColor="#405C58"
            android:layout_below="@+id/profilePicture"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/productFragment_EmailDetails"
            android:text="akshithchittiveli@gmail.com"
            android:textSize="12sp"
            android:layout_below="@id/productFragmentCustomerName"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profileFragment_shoeSize"
            android:text="UK 7"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_below="@id/productFragment_EmailDetails"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:id="@+id/profileFragment_editProfileButton"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/profileFragment_shoeSize"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:text="Edit Profile"
            android:textAllCaps="false"
            android:backgroundTint="#FFC107"
            />

        <Button
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/profileFragment_editProfileButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:backgroundTint="#4CAF50"
            android:text="My Login History"
            android:textAllCaps="false"
            android:id="@+id/profileFragment_myLoginHistoryButton"
            />

        <Button
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/profileFragment_myLoginHistoryButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:backgroundTint="#8BC34A"
            android:text="My Orders"
            android:textAllCaps="false"
            android:id="@+id/profileFragment_MyOrdersButton"
            />

        <Button
            android:id="@+id/profileFragment_logoutButton"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/profileFragment_MyOrdersButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:backgroundTint="#D64F45"
            android:text="Logout"
            android:textAllCaps="false" />



    </RelativeLayout>
</FrameLayout>